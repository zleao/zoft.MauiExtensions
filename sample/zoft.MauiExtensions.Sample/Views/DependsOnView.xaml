<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="zoft.MauiExtensions.Sample.Views.DependsOnView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:zoft.MauiExtensions.Sample.ViewModels"
    xmlns:zoft="http://zoft.maui.extensions"
    Title="{zoft:Translate DependsOnPage_Title}"
    x:DataType="vm:DependsOnViewModel">

    <ScrollView Margin="20">
        <VerticalStackLayout Spacing="20">
            <Label TextColor="Red">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Uses the " />
                        <Span
                            FontAttributes="Bold"
                            Text="NotifyPropertyChangedFor"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenLinkCommand}" CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/generators/observableproperty#notifying-dependent-commands" />
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text=" attribute, and the partial methods generated by the " />
                        <Span
                            FontAttributes="Bold"
                            Text="ObservableProperty"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenLinkCommand}" CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/generators/observableproperty" />
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text=" attribute. All of this is provided by the " />
                        <Span
                            FontAttributes="Bold"
                            Text="CommunityToolkit.MVVM"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenLinkCommand}" CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label FontAttributes="Bold" Text="{zoft:Translate DependsOnPage_MainLabel}" />

            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="TriggerText" />
                <Entry Text="{Binding TriggerText}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="TargetText" />
                <Label Text="{Binding TargetText}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="TargetDate" />
                <DatePicker Date="{Binding TargetDate}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
