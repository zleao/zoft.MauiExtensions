<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zoft="http://zoft.maui.extensions"
             xmlns:vm="clr-namespace:zoft.MauiExtensions.Sample.ViewModels"
             x:Class="zoft.MauiExtensions.Sample.Views.DependsOnView"
             x:DataType="vm:DependsOnViewModel"
             Title="{zoft:Translate DependsOnPage_Title}">

    <ScrollView Margin="20">
        <VerticalStackLayout Spacing="20">
            <Label TextColor="Red">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Uses the "/>
                        <Span Text="NotifyPropertyChangedFor" FontAttributes="Bold" TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding OpenLinkCommand}"
                                    CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/generators/observableproperty#notifying-dependent-commands"/>
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text=" attribute, and the partial methods generated by the "/>
                        <Span Text="ObservableProperty" FontAttributes="Bold" TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding OpenLinkCommand}"
                                    CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/generators/observableproperty"/>
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text=" attribute. All of this is provided by the "/>
                        <Span Text="CommunityToolkit.MVVM" FontAttributes="Bold" TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding OpenLinkCommand}"
                                    CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/"/>
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label Text="{zoft:Translate DependsOnPage_MainLabel}" FontAttributes="Bold"/>

            <VerticalStackLayout>
                <Label Text="TriggerText" FontAttributes="Bold"/>
                <Entry Text="{Binding TriggerText}"/>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="TargetText" FontAttributes="Bold"/>
                <Label Text="{Binding TargetText}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="TargetDate" FontAttributes="Bold"/>
                <DatePicker Date="{Binding TargetDate}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
