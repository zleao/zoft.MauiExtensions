<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="zoft.MauiExtensions.Sample.Views.ValidationView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:zoft.MauiExtensions.Sample.ViewModels"
    xmlns:zoft="http://zoft.maui.extensions"
    Title="{zoft:Translate ValidationPage_Title}"
    x:DataType="vm:ValidationViewModel">

    <ScrollView Padding="10">
        <VerticalStackLayout Spacing="20">

            <Label TextColor="Red">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Based on the " />
                        <Span
                            FontAttributes="Bold"
                            Text="ObservableValidator"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenLinkCommand}" CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/observablevalidator" />
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text=" logic, provided by the " />
                        <Span
                            FontAttributes="Bold"
                            Text="CommunityToolkit.MVVM"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenLinkCommand}" CommandParameter="https://learn.microsoft.com/en-us/dotnet/communitytoolkit/mvvm/" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="{zoft:Translate ValidationPage_FirstNameLabel}" />
                <Entry Keyboard="Text" Text="{Binding FirstName}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="{zoft:Translate ValidationPage_LastNameLabel}" />
                <Entry Keyboard="Text" Text="{Binding LastName}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="{zoft:Translate ValidationPage_EmailLabel}" />
                <Entry Keyboard="Email" Text="{Binding Email}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="{zoft:Translate ValidationPage_PhoneLabel}" />
                <Entry Keyboard="Telephone" Text="{Binding PhoneNumber}" />
            </VerticalStackLayout>

            <HorizontalStackLayout Spacing="6">
                <Button Command="{Binding ValidateCommand}" Text="{zoft:Translate ValidationPage_ValidateButtonLabel}" />
                <Button Command="{Binding ClearValidationCommand}" Text="{zoft:Translate ValidationPage_ClearValidationButtonLabel}" />
            </HorizontalStackLayout>

            <Label
                FontAttributes="Bold"
                Text="{Binding ErrorMessage}"
                TextColor="Red" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
